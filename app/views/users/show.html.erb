<div class="row">
  <div class="col-lg-4">
    <h2><%= @user.name %></h2>
    <% if @user.avatar %>
      <div>
        <img class="img-circle" src="<%= @user.avatar.url %>" alt="<%= @user.name %> profile picture" width="140" height="140">
      </div>
    <% end %>
    <%= link_to "Edit my profile", edit_user_path %>

    <h3>My Item</h3>
    <p><% @user.items.each do |item| %>
      <%= link_to item.name, item_path %> - <%= item.description %>
    <% end %>
    </p>
  </div><!-- /.col-lg-4 -->
</div>
