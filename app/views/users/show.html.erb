<div class="row">
  <div class="col-lg-4">
    <h2><%= @user.name %></h2>
    <% if @user.avatar %>
      <img class="img-circle" src="<%= @user.avatar.url %>" alt="<%= @user.name %> profile picture" width="140" height="140">
    <% end %>
    <h4>My Item</h4>
    <p><% @user.items.each do |item| %>
      <%= item.name %> - <%= item.description %>
    <% end %>
    </p>
    <%= button_to "Edit my profile", user_path(@user), method: :patch %>
  </div><!-- /.col-lg-4 -->
</div>
