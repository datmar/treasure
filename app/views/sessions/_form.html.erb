<%= form_tag sessions_path, class: "form-signin", id: 'login-form' do |f| %>

  <div class="field form-group">
    <%= label_tag :email, nil, class: "sr-only" %>
    <div class="col-sm-10">
      <%= text_field_tag :email, nil, class: 'form-control', placeholder:'Email Address'%>
    </div>
  </div>

  <div class="field form-group">
    <%= label_tag :password, nil, class: "sr-only" %>
    <div class="col-sm-10">
      <%= password_field_tag :password, nil, class: 'form-control', placeholder:'Password' %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Login", class:"btn btn-lg btn-primary btn-block" %>
    </div>
  </div>

<% end %>


